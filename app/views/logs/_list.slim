.panel.panel-default
  - if header
    .panel-heading Logs
  - if logs.empty?
    .panel-body = t 'logs_empty'
  - else
    table.table.table-hover
      thead: tr
        th.col-xs-3.col-sm-2 Time
        - unless header
          th.col-xs-2 From
        th.col-xs-1 Severity
        th Message
      tbody
        - logs.each do |log|
          tr class=severity_class(log.severity)
            td = about_time log.created_at
            - unless header
              td = log.from
            td = log.severity.upcase
            td = log.message
  
