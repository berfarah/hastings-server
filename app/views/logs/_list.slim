.panel.panel-default
  - if header
    .panel-heading = header
  - if logs.empty?
    .panel-body = t 'logs_empty'
  - else
    table.table.table-hover
      thead: tr
        th.col-xs-3.col-sm-2 Time
        th.col-xs-1 Severity
        th Message
      tbody
        - logs.each do |log|
          tr class=severity_class(log.severity)
            td = l(log.created_at, format: :scan)
            td = log.severity.upcase
            td = log.message
  
